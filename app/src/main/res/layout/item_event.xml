<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_item_event_background"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                tools:text="Event Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tv_item_event_title"
                android:padding="16dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                tools:text="XX.XX.XXXX"
                android:textSize="12dp"
                android:id="@+id/tv_item_event_date"
                android:textStyle="italic"
                android:gravity="center"
                android:padding="16dp"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="128dp"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/cmd_promise"
                    android:text="@string/promise"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:layout_width="128dp"
                    android:backgroundTint="#F44336"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/cmd_cancel"
                    android:text="@string/cancel"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>