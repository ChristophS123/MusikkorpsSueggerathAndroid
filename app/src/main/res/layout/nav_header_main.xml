<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/main_color"
    android:layout_height="@dimen/nav_header_main_height">

    <ImageView
        android:layout_width="@dimen/nav_header_main_image_size"
        android:src="@drawable/icon"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"
        android:id="@+id/iv_nav_header_main"
        android:layout_margin="@dimen/nav_header_main_image_margin"
        android:layout_height="@dimen/nav_header_main_image_size">
    </ImageView>


    <TextView
        android:layout_width="wrap_content"
        tools:text="Christoph Schmitz"
        android:textSize="16sp"
        android:id="@+id/tv_nav_header_name"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/nav_header_main_image_margin"
        android:layout_marginBottom="@dimen/nav_header_main_image_margin"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>