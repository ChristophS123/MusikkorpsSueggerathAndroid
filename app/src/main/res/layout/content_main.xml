<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:theme="@style/Theme.Kanban.AppBarOverlay"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/tb_main_activity"
            app:popupTheme="@style/Theme.Kanban.PopUpOverlay"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/main_activity_menu_button_size"
                    android:src="@drawable/menu"
                    android:id="@+id/cmd_main_menu"
                    android:layout_marginRight="@dimen/main_activity_menu_button_margin_right"
                    android:layout_height="@dimen/main_activity_menu_button_size">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_activity_toolbar_text_size"
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/icon"
        android:padding="64dp"
        android:layout_weight="5"
        android:layout_height="0dp">
    </ImageView>

</LinearLayout>